{
  "name": "restaurant-search-api",
  "version": "1.0.0",
  "scripts": {
    "start": "ts-node src/api/server.ts",
    "dev": "nodemon src/api/server.ts",
    "init-db": "ts-node scripts/init-db.ts",
    "setup": "./scripts/setup-dev.sh",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "pretest": "NODE_ENV=test ts-node scripts/init-db.ts",
    "test:setup": "NODE_ENV=test npx ts-node scripts/init-db.ts && npm test",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "reset": "./scripts/reset.sh"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.0",
    "@eslint/js": "^8.56.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.17.6",
    "@types/pg": "^8.10.9",
    "@types/pg-pool": "^2.0.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "typescript": "~5.5.0"
  },
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0"
  }
}
